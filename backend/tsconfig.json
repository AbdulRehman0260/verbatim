 {
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "module": "nodenext",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "nodenext",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules","drizzle.config.ts"]
}